# kubectl set image deploy nginx-deploy nginx-container=nginx:1.15 --record
---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: app-deploy
  annotations:
    kubernetes.io/change-cause: version 1.15 # --record
spec:
  replicas: 3
  selector:
    matchLabels:
      app: webui
  template:
    metadata:
      name: nginx-pod
      labels: 
        app: webui
    spec:
      containers:
        - name: web
          image: nginx:1.15
          ports:
          - containerPort: 80
